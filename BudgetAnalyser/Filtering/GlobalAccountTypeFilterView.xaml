<Window x:Class="BudgetAnalyser.Filtering.GlobalAccountTypeFilterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="155"
        Icon="..\UI\Assets\PieChart.png"
        ResizeMode="NoResize"
        Title="Global Filters"
        Width="300"
        Background="{StaticResource Brush.MainBackground}"
        WindowState="Normal">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   Text="Account Type Filter" />
        <ComboBox Grid.Row="1"
                  Margin="3"
                  ItemsSource="{Binding AccountTypes}"
                  SelectedItem="{Binding SelectedAccountType}" />
        <StackPanel Grid.ColumnSpan="2"
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button Command="{Binding ClearCommand}"
                    Style="{StaticResource Button.Round.Clear}" />
            <Button Command="{Binding CloseCommand}"
                    Style="{StaticResource Button.Round.Ok}"
                    ToolTip="Apply Filter and Close" />
        </StackPanel>
    </Grid>

</Window>