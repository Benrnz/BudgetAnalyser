<Window x:Class="BudgetAnalyser.Filtering.GlobalDateFilterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="210"
        Icon="..\UI\Assets\PieChart.png"
        ResizeMode="NoResize"
        Title="Global Filters"
        Background="{StaticResource Brush.MainBackground}"
        Width="360"
        WindowState="Normal">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   Text="Date Filter" />
        <TextBlock Grid.Row="1"
                   Text="Begin Date (inclusive)" />
        <DatePicker Grid.Column="1"
                    CalendarStyle="{StaticResource CalendarStyle}"
                    Grid.Row="1"
                    SelectedDate="{Binding Criteria.BeginDate, StringFormat=d}" />
        <TextBlock Grid.Row="2"
                   Text="End Date (inclusive)" />
        <DatePicker Grid.Column="2"
                    Grid.Row="2"
                    CalendarStyle="{StaticResource CalendarStyle}"
                    SelectedDate="{Binding Criteria.EndDate, StringFormat=d}" />
        <StackPanel Grid.ColumnSpan="2"
                    Grid.Row="3"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button Command="{Binding ClearCommand}"
                    Style="{StaticResource Button.Round.Clear}"
                    Margin="2" />
            <Button Command="{Binding CloseCommand}"
                    Style="{StaticResource Button.Round.Ok}"
                    ToolTip="Apply filter and close" />
        </StackPanel>
    </Grid>

</Window>