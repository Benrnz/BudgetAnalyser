                              Fill="{StaticResource ButtonGlyphBrush}"
                              Height="15"
                              HorizontalAlignment="Left"
                              Margin="13,12,0,0"
                              Stretch="Uniform"
                              Stroke="{StaticResource ButtonGlyphBrush}"
                              StrokeThickness="1"
                              VerticalAlignment="Top"
