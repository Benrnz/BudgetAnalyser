<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ButtonChromeColor">
        #FFBEE6FD
    </Color>

    <SolidColorBrush x:Key="ButtonChromeBrush"
                     Color="{StaticResource ButtonChromeColor}" />

    <SolidColorBrush x:Key="ButtonDisabledBrush"
                     Color="{StaticResource MainBackground}" />

    <Color x:Key="ButtonBackgroundColor">
        #AAA9A9A9
    </Color>

    <SolidColorBrush x:Key="ButtonBackgroundBrush"
                     Color="{StaticResource ButtonBackgroundColor}" />

    <Color x:Key="ButtonStokeColor">
        #AA333333
    </Color>

    <SolidColorBrush x:Key="ButtonStrokeBrush"
                     Color="{StaticResource ButtonStokeColor}" />


    <!-- Rectangular Buttons -->
    <Style x:Key="SquareButtonBaseStyle"
           TargetType="Button">
        <Setter Property="Margin"
                Value="5" />
        <Setter Property="BorderBrush"
                Value="{StaticResource ControlBorderBrush}" />
        <Setter Property="BorderThickness"
                Value="2" />
        <Setter Property="Width"
                Value="100" />
        <Setter Property="Height"
                Value="40" />
        <Setter Property="Foreground"
                Value="{StaticResource MainBackgroundBrush}" />
        <Setter Property="Padding"
                Value="2" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background"
                        Value="{StaticResource ControlMouseOverBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="OkButton"
           BasedOn="{StaticResource SquareButtonBaseStyle}"
           TargetType="Button">
        <Setter Property="IsDefault"
                Value="True" />
        <Setter Property="Content"
                Value="_Ok" />
    </Style>

    <Style x:Key="CancelButton"
           TargetType="Button"
           BasedOn="{StaticResource SquareButtonBaseStyle}">
        <Setter Property="IsCancel"
                Value="True" />
        <Setter Property="Content"
                Value="Cancel" />
    </Style>

    <!-- Circular Buttons -->
    <Style x:Key="CloseButton"
           TargetType="{x:Type Button}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background"
                        Value="{StaticResource ButtonChromeBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled"
                     Value="False">
                <Setter Property="Background"
                        Value="{StaticResource ButtonDisabledBrush}" />
            </Trigger>
        </Style.Triggers>
        <Setter Property="Background"
                Value="{StaticResource ButtonBackgroundBrush}" />
        <Setter Property="Margin"
                Value="2" />
        <Setter Property="Template">
            <Setter.Value>

                <ControlTemplate>
                    <Grid Height="40"
                          Width="40">
                        <Ellipse Fill="{TemplateBinding Background}"
                                 Height="40"
                                 HorizontalAlignment="Center"
                                 Stroke="#AA333333"
                                 StrokeThickness="4"
                                 VerticalAlignment="Center"
                                 Width="40" />
                        <Path Data="M0,0 L1,1 M0,1 L1,0"
                              Height="20"
                              HorizontalAlignment="Center"
                              Stretch="Uniform"
                              Stroke="#FF333333"
                              StrokeThickness="3"
                              VerticalAlignment="Center"
                              Width="20" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Width"
                Value="40" />
        <Setter Property="Height"
                Value="40" />
        <Setter Property="ToolTip"
                Value="Close" />
        <Setter Property="IsCancel"
                Value="True" />
    </Style>

