    <Style x:Key="NewButton"
           TargetType="{x:Type Button}">
        <Setter Property="Background"
                Value="{StaticResource ButtonBackgroundBrush}" />
        <Setter Property="Margin"
                Value="2" />
        <Setter Property="Template">
            <Setter.Value>

                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid Height="40"
                          Width="40">
                        <Ellipse Fill="{TemplateBinding Background}"
                                 Height="40"
                                 HorizontalAlignment="Center"
                                 Stroke="#AA333333"
                                 StrokeThickness="4"
                                 VerticalAlignment="Center"
                                 Width="40" />
                        <Rectangle Height="15"
                                   Width="15"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Stroke="#FF333333"
                                   StrokeThickness="2" />
                        <Path Data="M19,0 L0,16"
                              HorizontalAlignment="Center"
                              Margin="22.25,12.5,12.5,22.75"
                              StrokeThickness="2"
                              Stroke="#FF333333"
                              VerticalAlignment="Center"
                              Height="4.75"
                              Stretch="Fill"
                              Width="5.25"
                              RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="-1" />
                                    <SkewTransform />
                                    <RotateTransform />
                                    <TranslateTransform />
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>
                        <TextBlock Foreground="#FF333333"
                                   FontFamily="Segoe UI"
                                   FontSize="16"
                                   Margin="24,3,0,0"
                                   HorizontalAlignment="Left"
                                   Text="*"
                                   VerticalAlignment="Top" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Width"
                Value="40" />
        <Setter Property="Height"
                Value="40" />
        <Setter Property="ToolTip"
                Value="Clear all filters" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
