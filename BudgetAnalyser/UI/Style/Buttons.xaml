                              Margin="8,12,10,10"
                              StrokeThickness="1"
                              VerticalAlignment="Top" />
                        <Path Data="M0,10 L14,10 L18,18 L4,18 L0,10"
                              Fill="{StaticResource ButtonGlyphBrush}"
                              HorizontalAlignment="Left"
                              Margin="8,12,10,10"
                              Stroke="{StaticResource ButtonStrokeBrush}"
                              StrokeThickness="1"
