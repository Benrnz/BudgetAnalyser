<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BorderLightColor">
        #FF211AA9
    </Color>
    <Color x:Key="ToolTip.BackgroundColour">
        NavajoWhite
    </Color>

    <Color x:Key="BorderDarkColor">
        #FF444444
    </Color>

    <Color x:Key="TileBackgroundColor">
        #FF363636
    </Color>

    <Color x:Key="TileBackgroundAlternateColor">
        #FF262626
    </Color>

    <Color x:Key="ControlMouseOverColor">
        #FF3843C4
    </Color>

    <Color x:Key="DisabledControlDarkColor">
        #FFC5CBF9
    </Color>

    <Color x:Key="DisabledForegroundColor">
        #FF888888
    </Color>

    <Color x:Key="SelectedItemRowColor">
        #014F01
    </Color>

    <Color x:Key="TextColor">
        White
    </Color>

    <Color x:Key="SpendingGraphLine">
        Blue
    </Color>

    <Color x:Key="BudgetGraphLine">
        Green
    </Color>

    <Color x:Key="ZeroGraphLine">
        DarkRed
    </Color>

    <Color x:Key="MainBackground">
        Black
    </Color>

    <Color x:Key="SecondaryBackground">
        Tan
    </Color>

    <Color x:Key="TertiaryBackground">
        DarkSeaGreen
    </Color>

    <Color x:Key="TextBlock.LabelColour">
        DarkSeaGreen
    </Color>

    <Color x:Key="Shadow">
        Black
    </Color>

    <Color x:Key="Debit1">
        DarkRed
    </Color>

    <Color x:Key="Credit1">
        DarkGreen
    </Color>

    <Color x:Key="DebitLight">
        LightCoral
    </Color>

    <Color x:Key="Credit2">
        LightGreen
    </Color>

    <Color x:Key="NeutralNumber">
        Black
    </Color>

    <Color x:Key="ImportantHighlightLight">
        #FFEF1954
    </Color>

    <Color x:Key="DebitBackground2">
        Red
    </Color>

    <Color x:Key="NotSoBadDebit">
        Purple
    </Color>

    <Color x:Key="SlightDebit">
        DarkOrange
    </Color>

    <Color x:Key="Popup.Background">#FF003300</Color>

    <SolidColorBrush x:Key="ToolTip.Background"
                     Color="{StaticResource ToolTip.BackgroundColour}" />

    <SolidColorBrush x:Key="PopUpBackground" Color="{StaticResource Popup.Background}" />

    <SolidColorBrush x:Key="TextBlock.LabelBrush"
                     Color="{StaticResource TextBlock.LabelColour}" />

    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}" />

    <LinearGradientBrush x:Key="ControlBorderBrush"
                         EndPoint="0,1"
                         StartPoint="0,0">
        <GradientStop Color="{StaticResource BorderLightColor}"
                      Offset="0" />
        <GradientStop Color="{StaticResource BorderDarkColor}"
                      Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="TileBackgroundBrush"
                     Color="{StaticResource TileBackgroundColor}" />

    <SolidColorBrush x:Key="TileBackgroundAlternateBrush"
                     Color="{StaticResource TileBackgroundAlternateColor}" />

    <SolidColorBrush x:Key="ControlMouseOverBrush"
                     Color="{StaticResource ControlMouseOverColor}" />

    <SolidColorBrush x:Key="SelectedItemRowBrush"
                     Color="{StaticResource SelectedItemRowColor}" />

    <SolidColorBrush x:Key="TextBrush"
                     Color="{StaticResource TextColor}" />

    <SolidColorBrush x:Key="SlightDebitBrush"
                     Color="{StaticResource SlightDebit}" />

    <SolidColorBrush x:Key="NotSoBadDebitBrush"
                     Color="{StaticResource NotSoBadDebit}" />

    <SolidColorBrush x:Key="DebitBackground2Brush"
                     Color="{StaticResource DebitBackground2}" />

    <SolidColorBrush x:Key="ImportantHighlightLightBrush"
                     Color="{StaticResource ImportantHighlightLight}" />

    <SolidColorBrush x:Key="NeutralNumberBackgroundBrush"
                     Color="{StaticResource NeutralNumber}" />

    <SolidColorBrush x:Key="CreditBackground2Brush"
                     Color="{StaticResource Credit2}" />

    <SolidColorBrush x:Key="DebitBackgroundLightBrush"
                     Color="{StaticResource DebitLight}" />

    <SolidColorBrush x:Key="CreditBackground1Brush"
                     Color="{StaticResource Credit1}" />

    <SolidColorBrush x:Key="DebitBackground1Brush"
                     Color="{StaticResource Debit1}" />

    <SolidColorBrush x:Key="ShadowBrush"
                     Color="{StaticResource Shadow}" />

    <SolidColorBrush x:Key="SpendingGraphLineBrush"
                     Color="{StaticResource SpendingGraphLine}" />

    <SolidColorBrush x:Key="BudgetGraphLineBrush"
                     Color="{StaticResource BudgetGraphLine}" />

    <SolidColorBrush x:Key="ZeroGraphLineBrush"
                     Color="{StaticResource ZeroGraphLine}" />

    <SolidColorBrush x:Key="MainBackgroundBrush"
                     Color="{StaticResource MainBackground}" />

    <SolidColorBrush x:Key="SecondaryBackgroundBrush"
                     Color="{StaticResource SecondaryBackground}" />

    <SolidColorBrush x:Key="TertiaryBackgroundBrush"
                     Color="{StaticResource TertiaryBackground}" />

</ResourceDictionary>