<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BudgetTile"
           TargetType="{x:Type TextBox}">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="Foreground"
                Value="White" />
        <Setter Property="BorderThickness"
                Value="0" />
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="MinWidth" Value="130" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="Background" Value="{StaticResource Brush.TileBackgroundAlternate}" />
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Default}" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.ControlBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>