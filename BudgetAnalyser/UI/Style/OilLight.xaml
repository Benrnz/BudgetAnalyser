<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="WarningOilLightColour">
        DarkOrange
    </Color>
    
    <Color x:Key="OilLightTextColor">Black</Color>

    <SolidColorBrush x:Key="WarningOilLightBrush"
                     Color="{StaticResource WarningOilLightColour}" />

    <SolidColorBrush x:Key="OilLightTextBrush"
                     Color="{StaticResource OilLightTextColor}" />
    
    <Style x:Key="WarningOilLightStyle"
           TargetType="Border">
        <Setter Property="CornerRadius"
                Value="3" />
        <Setter Property="Margin"
                Value="8" />
        <Setter Property="Background"
                Value="{StaticResource WarningOilLightBrush}" />
    </Style>

    <Style x:Key="WarningLightTextStyle"
           TargetType="TextBlock">
        <Setter Property="Margin"
                Value="3,6,3,6" />
        <Setter Property="FontSize"
                Value="10" />
        <Setter Property="FontWeight"
                Value="Bold" />
        <Setter Property="Foreground"
                Value="{StaticResource OilLightTextBrush}" />
    </Style>
</ResourceDictionary>