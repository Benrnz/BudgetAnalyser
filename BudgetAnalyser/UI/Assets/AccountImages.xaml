<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="ChequeLogoImage">
        <Viewbox Stretch="Uniform">
            <Grid>
                <Path Data="M1,0 L10,0 10,2 9,3 0,3 0,1"
                      Fill="#FF0069CF"
                      Stretch="Uniform" />
                <TextBlock Text="Cheque"
                           Margin="10,0,10,5"
                           FontStyle="Italic"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Grid>
        </Viewbox>
    </ControlTemplate>

    <ControlTemplate x:Key="SavingsLogoImage">
        <Viewbox Stretch="Uniform">
            <Grid>
                <Path Data="M1,0 L10,0 10,2 9,3 0,3 0,1"
                      Fill="#FF00CF72"
                      Stretch="Uniform" />
                <TextBlock Text="Savings"
                           Margin="10,0,10,5"
                           FontStyle="Italic"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Grid>
        </Viewbox>
    </ControlTemplate>


</ResourceDictionary>