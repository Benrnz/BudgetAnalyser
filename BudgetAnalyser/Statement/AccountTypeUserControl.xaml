<UserControl x:Class="BudgetAnalyser.Statement.AccountTypeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Image Height="20"
               HorizontalAlignment="Left"
               Margin="6,2,6,2"
               Source="{Binding ImagePath, Converter={StaticResource Converter.ImagePath}, ConverterParameter=UI}"
               Stretch="Uniform"
               ToolTip="{Binding Name}"
               VerticalAlignment="Top"
               Width="62" />
    </Grid>
</UserControl>
