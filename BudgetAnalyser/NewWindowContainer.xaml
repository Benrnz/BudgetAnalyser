<Window x:Class="BudgetAnalyser.NewWindowContainer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}"
        Icon="PieChart.ico"
        Height="350"
        Width="700"
        Closed="OnClosed"
        DataContextChanged="OnDataContextChanged">

    <!-- Allows any user control to be presented as a new window -->
    <Grid>
        <ContentPresenter x:Name="MainContent" />
        <!-- Place any user control, or object that has a registered data template, here -->
    </Grid>
</Window>