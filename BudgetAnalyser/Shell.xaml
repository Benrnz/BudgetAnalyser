<Window x:Class="BudgetAnalyser.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:budgetAnalyser="clr-namespace:BudgetAnalyser"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shellDialog="clr-namespace:BudgetAnalyser.ShellDialog"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Background="{StaticResource Brush.MainBackground}"
        SizeChanged="OnSizeChanged"
        LocationChanged="OnLocationChanged"
        Icon="UI/Assets/PieChart.png"
        Loaded="OnLoaded"
        MinHeight="600"
        MinWidth="800"
        SizeToContent="Manual"
        SnapsToDevicePixels="True"
        Title="{Binding WindowTitle}"
        Closing="ShellWindow_OnClosing"
        d:DataContext="{d:DesignInstance budgetAnalyser:ShellController}">

    <Window.InputBindings>
        <KeyBinding Key="S"
                    Command="{x:Static budgetAnalyser:PersistenceOperationCommands.SaveDatabaseCommand}"
                    Modifiers="Control" />
    </Window.InputBindings>

    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <budgetAnalyser:MainMenuUserControl DataContext="{Binding MainMenuController}" />
        </Grid>
        <Grid>

            <Grid Visibility="{Binding TabTransactionsController.Shown, Converter={StaticResource Converter.BoolToVis}}">
                <ContentPresenter Content="{Binding TabTransactionsController}" />
                <shellDialog:ShellDialogView DataContext="{Binding TransactionsTabDialog}" />
            </Grid>

            <Grid Visibility="{Binding TabBudgetController.Shown, Converter={StaticResource Converter.BoolToVis}}">
                <ContentPresenter Content="{Binding TabBudgetController}"
                                  VerticalAlignment="Stretch" />
                <shellDialog:ShellDialogView DataContext="{Binding BudgetTabDialog}" />
            </Grid>

            <Grid Visibility="{Binding TabLedgerBookController.Shown, Converter={StaticResource Converter.BoolToVis}}">
                <ContentPresenter Content="{Binding TabLedgerBookController}"
                                  VerticalAlignment="Stretch" />
                <shellDialog:ShellDialogView DataContext="{Binding LedgerBookTabDialog}" />
            </Grid>

            <Grid Visibility="{Binding TabDashboardController.Shown, Converter={StaticResource Converter.BoolToVis}}">
                <ContentPresenter Content="{Binding TabDashboardController}"
                                  VerticalAlignment="Stretch" />
                <shellDialog:ShellDialogView DataContext="{Binding DashboardTabDialog}" />
            </Grid>

            <Grid Visibility="{Binding TabReportsCatalogController.Shown, Converter={StaticResource Converter.BoolToVis}}">
                <ContentPresenter Content="{Binding TabReportsCatalogController}"
                                  VerticalAlignment="Stretch" />
                <shellDialog:ShellDialogView DataContext="{Binding ReportsTabDialog}" />
            </Grid>

            <Grid Visibility="{Binding RulesController.Shown, Converter={StaticResource Converter.BoolToVis}}">
                <ContentPresenter Content="{Binding RulesController}"
                                  VerticalAlignment="Stretch" />
            </Grid>
        </Grid>
    </DockPanel>

</Window>
