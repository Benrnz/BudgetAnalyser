<UserControl x:Class="BudgetAnalyser.Dashboard.DashboardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:filtering="clr-namespace:BudgetAnalyser.Filtering"
             MinHeight="200"
             MinWidth="200">

    <UserControl.Resources>
        <Color x:Key="TileHighlightColor">#FF2119FF</Color>
        <SolidColorBrush x:Key="TileColourBrush1"
                         Color="#FF0073C6" />

        <Style x:Key="TileButton"
               TargetType="{x:Type Button}">
            <Setter Property="HorizontalAlignment"
                    Value="Stretch" />
            <Setter Property="VerticalAlignment"
                    Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="MainPanel"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="2">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                                          Storyboard.TargetName="MainPanel">
                                                <EasingColorKeyFrame KeyTime="0:0:0.05"
                                                                     Value="{StaticResource TileHighlightColor}" />
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>

                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource TileBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Foreground="{StaticResource MainBackgroundBrush}"
                   Text="Dashboard Under construction" />
        <Border Background="{StaticResource TileColourBrush1}"
                Grid.Row="1"
                Height="75"
                Margin="10"
                Width="250">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Margin="10,10,10,2"
                           Text="{Binding GlobalFilterController.DateSummaryLine1}" />
                <TextBlock Margin="10,2,10,10"
                           Grid.Row="1"
                           Text="{Binding GlobalFilterController.DateSummaryLine2}" />
                <Button Grid.RowSpan="2"
                        Style="{StaticResource TileButton}"
                        Command="{Binding GlobalDateFilterCommand}">
                    <Button.CommandParameter>
                        <filtering:FilterMode>Dates</filtering:FilterMode>
                    </Button.CommandParameter>
                </Button>
            </Grid>
        </Border>
        <Border Background="{StaticResource TileColourBrush1}"
                Grid.Column="1"
                Grid.Row="1"
                Height="75"
                Margin="10"
                Width="250">
            <Grid>
                <TextBlock Margin="10"
                           Text="{Binding GlobalFilterController.AccountTypeSummary}" />
                <Button Style="{StaticResource TileButton}"
                        Command="{Binding GlobalAccountTypeFilterCommand}">
                    <Button.CommandParameter>
                        <filtering:FilterMode>AccountType</filtering:FilterMode>
                    </Button.CommandParameter>
                </Button>
            </Grid>
        </Border>
    </Grid>

</UserControl>
