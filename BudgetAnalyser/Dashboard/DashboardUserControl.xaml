<UserControl x:Class="BudgetAnalyser.Dashboard.DashboardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:widget="clr-namespace:BudgetAnalyser.Engine.Widget;assembly=BudgetAnalyser.Engine"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dashboard="clr-namespace:BudgetAnalyser.Dashboard"
             xmlns:converters1="clr-namespace:Rees.Wpf.Converters;assembly=Rees.Wpf"
             MinHeight="200"
             MinWidth="200">

    <UserControl.Resources>
        <converters1:TextToStaticResourceConverter x:Key="TextToStaticResourceConverter" />

        <DataTemplate DataType="{x:Type widget:Widget}">
            <Border Style="{Binding WidgetStyle, Converter={StaticResource TextToStaticResourceConverter}}"
                    ToolTip="{Binding ToolTip}">
                <Grid Style="{Binding ColourStyleName, Converter={StaticResource TextToStaticResourceConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Image Source="{Binding ImageResourceName, Converter={StaticResource TextToStaticResourceConverter}}"
                           Width="40"
                           Margin="5"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"/>
                    <Image Source="{Binding ImageResourceName2, Converter={StaticResource TextToStaticResourceConverter}}"
                           Width="20"
                           Margin="40,25,0,0"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left" />
                    <TextBlock FontSize="24"
                               Margin="5,2,2,2"
                               Text="{Binding LargeNumber}" />
                    <TextBlock Grid.Row="1"
                               Grid.ColumnSpan="2"
                               Style="{StaticResource TextBlockParagraph}"
                               Text="{Binding DetailedText}"
                               Margin="4,0,4,4"
                               TextWrapping="Wrap" />
                    <Button Command="{Binding DataContext.WidgetCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type dashboard:DashboardUserControl}}}"
                            CommandParameter="{Binding .}"
                            Grid.RowSpan="2"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource ModernTileButton}"
                            Visibility="{Binding Clickable, Converter={StaticResource BoolToVisConverter}}">
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Background="{StaticResource MainBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ItemsControl Grid.ColumnSpan="3"
                      Grid.Row="1"
                      ItemsSource="{Binding Widgets}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        <TextBlock FontSize="10"
                   Foreground="{StaticResource TileBackgroundBrush}"
                   Grid.ColumnSpan="3"
                   Grid.Row="2"
                   HorizontalAlignment="Right"
                   Text="{Binding VersionString}"
                   VerticalAlignment="Bottom" />
    </Grid>

</UserControl>
