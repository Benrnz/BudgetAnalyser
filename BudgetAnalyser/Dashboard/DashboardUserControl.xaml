                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock FontSize="24"
                               Text="{Binding LargeNumber}" />
                    <TextBlock Grid.Row="1"
                               Style="{StaticResource TextBlockParagraph}"
                               Text="{Binding DetailedText}"
