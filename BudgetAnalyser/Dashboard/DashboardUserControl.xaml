                <TextBlock FontSize="13"
                           Margin="60,10,10,10"
                           Text="{Binding GlobalFilterController.AccountTypeSummary}"
                           TextWrapping="Wrap" />
                <Button Command="{Binding GlobalAccountTypeFilterCommand}"
                        Style="{StaticResource ModernTileButton}">
                    <Button.CommandParameter>
                        <filtering:FilterMode>
